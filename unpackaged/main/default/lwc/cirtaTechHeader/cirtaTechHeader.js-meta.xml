    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target> <!-- Makes the component available for use in Flows -->
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="iconName" type="String" label="Icon Name" description="The SLDS icon name (e.g., utility:upload)"/>
